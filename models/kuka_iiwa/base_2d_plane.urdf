<?xml version="1.0"?>
<!-- base 2d plane -->
<robot name="base_2d_plane">

  <link name="base_link">
  </link>
  
  <!-- joint between base_link and link_2d_plane_x -->
  <joint name="x_axis" type="prismatic">
    <parent link="base_link"/>
    <child link="link_2d_plane_x"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="1.0 0 0"/>
    <limit lower="-4" upper="4" effort="0" velocity="0"/>
    <dynamics damping="0.5"/>
  </joint>
  
  <link name="link_2d_plane_x">
  </link>
  
  <!-- joint between link_2d_plane_x and link_2d_plane_y -->
  <joint name="y_axis" type="prismatic">
    <parent link="link_2d_plane_x"/>
    <child link="link_2d_plane_y"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="0 1.0 0"/>
    <limit lower="-4" upper="4" effort="0" velocity="0"/>
    <dynamics damping="0.5"/>
  </joint>

  <link name="link_2d_plane_y">
  </link>


  <material name="red">
    <color rgba="1.0 0 0 1.0"/>
  </material>

</robot>
